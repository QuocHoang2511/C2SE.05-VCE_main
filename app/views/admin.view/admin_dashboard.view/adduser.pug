extends ../admin_dashboard

block main-content
  html
    head
      link(rel="stylesheet" href="/stylesheets/profile/editprofile.css")
    form.profile-form(action='/api/v1/admin/createuser' method="POST" enctype="multipart/form-data")
      .container-fluid
        .row
          .col-lg-4
            .imageupload(style="display: flex; justify-content: center; align-items: center; background-color: #f0f0f0; width: 100%; height: 200px; border: 2px dashed #ccc; cursor: pointer; position: relative; overflow: hidden;")
              img#preview.img-fluid(
                style="max-width: 100%; max-height: 100%; object-fit: cover; display: none;"
                alt="Preview"
              )
              label(for="file-input" style="color: #007bff; font-weight: bold; position: absolute;") + Upload Image
              input#file-input.d-none(type="file" name="avatar")

            script.
              const inputTag = document.getElementById('file-input');
              const previewImageTag = document.getElementById('preview');
              inputTag.onchange = () => {
                const [file] = inputTag.files;
                if (file) {
                  previewImageTag.src = URL.createObjectURL(file);
                  previewImageTag.style.display = 'block';
                  document.querySelector('label[for="file-input"]').style.display = 'none';
                }
              }


          .col-lg-8
            .form-group
              label(for="username") Username:
              input#username.form-control(type="text" name="username" placeholder="Enter username" required)



            .form-group
              label(for="email") Email:
              input#email.form-control(type="email" name="email" placeholder="Enter email" required)



            .form-group
              label(for="address") Address:
              input#address.form-control(type="text" name="address" placeholder="Enter address" required)



            .form-group
              label(for="phone") Phone:
              input#phone.form-control(type="text" name="phone" placeholder="Enter phone number" required)



            .form-group
              label(for="role") Role:
              select#role.form-control(name="role" required)
                option(value="" disabled selected) -- Select Role --
                option(value="1") Admin
                option(value="0") User



            .form-group
              label(for="password") Password:
              input#password.form-control(type="password" name="password" placeholder="Enter password" required)


            .col-lg-12
              .form-group
                label(for="confirmPassword") Confirm Password:
                input#confirmPassword.form-control(type="password" name="confirmPassword" placeholder="Re-enter password" required)



              button.submit-buttons.btn.btn-primary.mt-3(type="submit") Submit

