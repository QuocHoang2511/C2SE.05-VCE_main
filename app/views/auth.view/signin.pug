    style.
      .btn-google {
        background-color: #4285F4; /* Màu xanh của Google */
        color: white;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .btn-google i {
        margin-right: 8px; /* Khoảng cách giữa biểu tượng và văn bản */
      }
      .btn-google:hover {
        background-color: #357AE8; /* Màu khi di chuột */
      }

